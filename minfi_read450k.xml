<tool id="minfi_read450k" name="minfi_read450k" version="0.1.0">
    <description>load .IDAT files into RGSet</description>
    <requirements>
        <requirement type="package" version="1.24.0">bioconductor-minfi</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        Rscript ${__tool_directory__}/minfi_read450k.R "$input1" "$output1"
    ]]></command>
    <inputs>
        <param name="input1" type="text" value="" label="path to idat dir" help="Local path to directory with raw idat data"  />
    </inputs>
    <outputs>
        <data name="output1" format="rdata" />
    </outputs>
    <tests>
        <test>
            <param name="input1" value="/home/ubuntu/minfi_read450k/idat"/>
            <output name="output1" file="RGSet.rdata"/>
        </test>
    </tests>
    <help><![CDATA[
        This tool Reads an entire methylation array experiment into RGSet class
    ]]></help>
    <citations>
        <citation type="doi">10.1093/bioinformatics/btu049</citation>
    </citations>
</tool>
